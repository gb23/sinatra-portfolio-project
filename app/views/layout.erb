<!DOCTYPE html>
<html>
  <head>
    <title>Sinatra Fridge Inventory</title>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <a href="/fridges/new">Add Fridge</a>
        <a href="/items/new">Add Item</a>
        <a href="/users/<%= current_user.slug %>">My Account</a> 
        <a href="/users/logout">Logout</a>
      <% end %>
    
    </header>
    <% if flash.has?(:message) %>
        <%= flash[:message] %>
    <% end %>
    <%= yield %>
    
  <% if logged_in? %>
      <br></br>
      <a href="/items">View All Items</a>
  <% end %>
  </body>
</html>