 <h1><%= @fridge.name %>  </h1>
    <form action="/fridges/<%=@fridge.slug%>/edit" method="get">
      <input type="submit" value="Edit">
    </form>
    <% if session[:delete] == false || session[:delete].nil? %>
      <form action='/items/<%= @item.slug %>' method="get">
        <% session[:delete]= true %>
        <input type="submit" value="Delete">
      </form>
      
    <% elsif session[:delete] == true %>
      <form action="/fridges/<%=@fridge.slug%>/delete" method="post">
         <% session[:delete] = false %>
        <input id="hidden" type="hidden" name="_method" value="delete">
        Note: Deleting this fridge will delete all items contained within! <br>
        <input type="submit" value="Confirm Delete">
      </form>
    <% end %>


<% @items.each.with_index(1) do |item, index|%>
  <table>
    <tr>
      <h2><%= index %>. <%= item.name %>
        <form method="post" action="/items/<%=item.id%>/delete">
          <input id="hidden" type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete Item">
        </form>  
        <form method="get" action="/items/<%=item.id%>/edit">
          <input type="submit" value="Edit Item">     
        </form>
      </h2>
    </tr>
    <tr><h3>Category: <%= item.category %></h3></tr>
    <tr><h3>Sell By Date: <%= item.date_sell_by.strftime("%m/%d/%y") if !item.date_sell_by.nil? %></h3></tr>
    <tr><h3>Expiration Date: <%= item.date_expires.strftime("%m/%d/%y") if !item.date_expires.nil? %></h3></tr>
    <tr><h3>Weight(grams): <%= item.grams %></h3></tr>
    <tr><h3>Note: <%= item.note %></h3></tr>
  </table>
<% end %>


